{{!-- handlebars html page info for the dashboard dispaly --}}
<section>
    <h2>Create New Post</h2>

    <form class="new-post-form">
        <div>
            <label for="post-title">Title</label>
            <input type="text" id="post-title" name="post-title" />
        </div>
        <div>
            <label for="post-content">Content</label>
            <textarea id="post-content" name="post-content"></textarea>
        
        </div>
        <button type="submit" class="btn">Create</button>
    </form>
</section>
{{!-- handlebars if statement to display posts if the array is populated --}}
{{#if posts.length}}
<section>
    <h2>Your Posts</h2>
    <ul>
        {{!-- handlebars "for loop" to iterate through array of posts--}}
        {{#each posts as |post|}}
        | <a href="/dashboard/edit/{{id}}">Edit post</a>
        <li>
            {{> post-info post}}
        </li>
        {{/each}}
    </ul>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>