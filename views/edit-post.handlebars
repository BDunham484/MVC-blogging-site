{{!-- handlebars html page info for the edit-post dispaly --}}
<article>
    <a href="/dashboard" class="refresh"> &larr; Back to dashboard</a>
    <h2>
        Edit Post
    </h2>
    <form class="edit-post-form">
        <div>
            <input name="post-title" type="text" value="{{post.title}}" />
            <textarea id="post-content">{{post.post_content}}</textarea>
        </div>
        <div>
            {{!-- imported data --}}
            {{post.vote_count}} {{format_plural "point" post.vote_count}} by you on {{format_date post.created_at}}
            |
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
        <button type="submit">Save post</button>
        <button type="button" class="delete-post-btn">Delete post</button>
    </form>
</article>

<form class="comment-form">
    <div>
        <textarea name="comment-body" id="edit-comment"></textarea>
    </div>

    <div>
        <button type="submit">add comment</button>
    </div>
</form>
{{!-- handlebars call for comments partial and passing post.comments to the partial --}}
{{> comments post.comments }}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>
<script src="/javascript/refresh.js"></script>